{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["es2021"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Module Resolution */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Project Structure */
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compileOnSave": true
}